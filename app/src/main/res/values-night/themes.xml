<?xml version="1.0" encoding="utf-8"?>

<resources xmlns:tools="http://schemas.android.com/tools">

    <!--Final, top-level theme-->
    <style name="Theme.Probeez.DayNight" parent="Theme.Probeez.Dark"/>

    <style name="Theme.Probeez.Dark" parent="Theme.Probeez">
        <!--Color-->
        <item name="colorPrimary">@color/probeez_blue_200</item>
        <item name="colorPrimaryVariant">@color/probeez_blue_300</item>
        <item name="colorSecondary">@color/probeez_orange_300</item>
        <item name="colorSecondaryVariant">@color/probeez_orange_300</item>

        <item name="android:colorBackground">@color/probeez_black_900</item>
        <item name="colorSurface">@color/probeez_black_800</item>
        <item name="colorPrimarySurfaceVariant">?attr/colorSurface</item>
        <item name="colorError">@color/probeez_red_200</item>

        <item name="colorOnPrimary">@color/probeez_black_900</item>
        <item name="colorOnSecondary">@color/probeez_black_900</item>
        <item name="colorOnBackground">@color/probeez_white_50</item>
        <item name="colorOnSurface">@color/probeez_white_50</item>
        <item name="colorOnError">@color/probeez_black_900</item>

        <item name="scrimBackground">@color/probeez_black_900_alpha_087</item>
        <item name="android:statusBarColor">@color/probeez_black_900_alpha_060</item>

        <item name="elevationOverlayEnabled">true</item>

        <!--System/Platform attributes-->
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">false</item>
    </style>

</resources>